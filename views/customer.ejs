<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>

  <% include ./partial/head %>

</head>

<body>

  <div class="container">
  <% include ./partial/header%>
    <h2>Data Customer</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th> Name </th>
          <th> User Name </th>
          <th> Password </th>
          <th> Tinggi Badan </th>
          <th> Berat badan </th>
          <th> Gender </th>
          <th> Level aktifitas </th>
          <th> Umur </th>
          <th> Action </th>
        </tr>
      </thead>
      <tbody>
        <% customerData.forEach(function(customer){ %>
          <tr>
            <td>
              <%= customer.id%>
            </td>
            <td>
              <%= customer.name%>
            </td>
            <td>
            <%= customer.username%>
            </td>
            <td>
              <%= customer.password%>
            </td>
            <td>
              <%= customer.tinggi_badan%>
            </td>
            <td>
              <%= customer.berat_badan%>
            </td>
            <td>
              <%= customer.gender%>
            </td>
            <td>
              <%= customer.level_activity%>
            </td>
            <td>
              <%= customer.age%>
            </td>

            <td> <a href="/customer/edit/<%= customer.id %>">Edit</a> | <a href="/customer/delete/<%= customer.id %>" onclick= "return confirm('are you sure?')" > Delete</a> </td>
          </tr>
          <%  })%>
      </tbody>
    </table>
  </div>

</body>
<footer>
  <% include ./partial/footer%>
</footer>
</html>
